generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model usuario {
  id        Int       @id @default(autoincrement())
  nombre    String
  email     String    @unique
  password  String
  role      String    @default("user")
  creadoEn  DateTime  @default(now())
  clientes  cliente[] // ← lado opuesto de la relación
}

model cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  telefono  String?
  creadoEn  DateTime @default(now())
  usuarioId Int?
  usuario   usuario? @relation(fields: [usuarioId], references: [id])
}
